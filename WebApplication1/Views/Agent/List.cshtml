@using WebApplication.Engine;
@{
    ViewData["Title"] = "Lista de Agentes";
}


<div class="">
    <div class="text-center mb-4">
        Lista de agentes
    </div>
    <div class="mb-4 justify-content-between row mx-4">
        <a class="btn btn-info mx-2 disabled" href="@Url.Action("Create","Agent")">Pesquisar Agente</a>
        <a class="btn btn-info mx-2 disabled" href="@Url.Action("Create","Agent")">Salvar</a>
        <a class="btn btn-info mx-2" href="@Url.Action("Create","Agent")">Criar novo Agente</a>
    </div>
    <section class="row justify-content-around">
        @foreach (Agent agent in Agent.GetAgents())
       {
        <div class="card col-5 mb-4">
            <div class="row w-auto">
                <div class="col p-0">
                    <img class="img-fluid" src="https://random.imagecdn.app/300/225">
                </div>
                <div class="col-6">
                    <h5 class="card-title pt-3 mb-4">
                        @agent.Name
                    </h5>
                    <p class="mb-4">
                        @agent.Phone
                    </p>
                    <p class="mb-4">
                        <a href="@("mailto:"+agent.Email)" >@agent.Email</a>
                    </p>
                </div>
            </div>
            <div class="card-footer row justify-content-between">
                @agent.Address
                <a class="btn btn-light" href="@Url.Action("Details","Agent", new {id = agent.ID})">Visualizar</a>
            </div>
        </div>
       }
    </section>
</div>
